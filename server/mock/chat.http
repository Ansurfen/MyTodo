@hostname = localhost
@port = 8080
@host = {{hostname}}:{{port}}


###
# @name signUser
POST http://{{host}}/user/sign HTTP/1.1
Content-Type: application/json

{
    "email": "a@gmail.com",
    "pwd": "123456"
}

###
# @name chatTopicNew
@token = {{signUser.response.body.$.jwt}}
POST http://{{host}}/chat/topic/new HTTP/1.1
Content-Type: application/json
Authorization: Bearer {{token}}

{
    "topic_id": 1,
    "message": "Hello World",
    "message_type": "text"
}

###
# @name chatTopicNewReply
@token = {{signUser.response.body.$.jwt}}
POST http://{{host}}/chat/topic/new HTTP/1.1
Content-Type: application/json
Authorization: Bearer {{token}}

{
    "topic_id": 1,
    "message": "Hello World",
    "message_type": "text",
    "reply_id": 8,
    "reply_by": 1,
    "reply_to": 2
}

###
# @name chatTopicGet
@token = {{signUser.response.body.$.jwt}}
POST http://{{host}}/chat/topic/get HTTP/1.1
Content-Type: application/json
Authorization: Bearer {{token}}

{
    "topic_id": 1,
    "page": 1,
    "page_size": 20
}

